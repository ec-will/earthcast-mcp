{
  "name": "earthcast-mcp",
  "version": "0.1.0",
  "description": "MCP (Model Context Protocol) server providing environmental and weather data from Earthcast Technologies API.",
  "mcpName": "earthcast-mcp",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "earthcast-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "weather",
    "environmental-data",
    "earthcast",
    "earthcast-technologies",
    "ect-api",
    "forecast",
    "claude",
    "claude-code",
    "ai",
    "llm"
  ],
  "author": "Earthcast Technologies",
  "license": "MIT",
  "homepage": "https://github.com/ec-will/earthcast-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-will/earthcast-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ec-will/earthcast-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "axios": "^1.13.1",
    "dotenv": "^17.2.3",
    "luxon": "^3.7.2",
    "mqtt": "^5.14.1",
    "ngeohash": "^0.6.3"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/ngeohash": "^0.6.8",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
